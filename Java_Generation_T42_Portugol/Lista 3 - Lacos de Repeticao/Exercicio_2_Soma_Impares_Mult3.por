programa
{
	
	funcao inicio()
	{
	inteiro soma=0
		para(inteiro cont=0;cont<=500;cont++){
			se(cont%2!=0 e cont%3==0){
				soma=soma+cont
				limpa()
				escreva("A soma dos números impares e divisiveis por 3 de 0 até 500 resulta em: "+soma)}
			}
		
	}
}
