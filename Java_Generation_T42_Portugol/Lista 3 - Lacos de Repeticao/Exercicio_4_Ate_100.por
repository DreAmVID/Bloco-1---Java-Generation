programa
{
	
	funcao inicio()
	{

	// variaveis
		
	inteiro valor, resultado=0

	// input
		
	escreva("escreva o numero desejado: ")	
	leia(valor)
	escreva("a sequencia de valor é: " + valor +", ")

	// laço
	
		enquanto(resultado<100){
			valor=valor*3
			resultado=valor
			escreva(resultado +", ")}
			
	}
}
